MAJOR=2
MINOR=3
PATCH=0
VERSION=$(MAJOR).$(MINOR).$(PATCH)

SHELL=/bin/sh
CC=@CC@
YACC=@YACC@
CFLAGS=-g -DVERSION=\"$(VERSION)\"

LIBS=@LIBS@

LDFLAGS=-g $(LIBS)

DIRS=delivery pageserv clients
NAME=pageserv
ARCHIVE=$(NAME)-$(VERSION)
STUFF=configure configure.in Makefile.in README TODO sample include $(DIRS)
JUNK=$(EXES) *.o *.core core
AUTOJUNK=config.status config.cache config.log Makefile clients/Makefile \
	delivery/Makefile pageserv/Makefile include/config.h

all:
	for i in $(DIRS) ; \
	do cd $$i && $(MAKE) VERSION=\"$(VERSION)\" all ; \
	cd .. ; \
	done

depend:
	for i in $(DIRS) ; do cd $$i && $(MAKE) depend ; cd .. ; done

tgz: $(ARCHIVE).tar.gz

$(ARCHIVE).tar.gz: $(STUFF)
	rm -f $(ARCHIVE).tar.gz
	mkdir $(ARCHIVE)
	cp -r $(STUFF) $(ARCHIVE)
	tar -cvf $(ARCHIVE).tar $(ARCHIVE)
	rm -rf $(ARCHIVE)
	gzip -9v $(ARCHIVE).tar

# irix globbing shit.
irixhack.o:
	@touch irixhack.o

clean:  irixhack.o
	for i in $(DIRS) ; do cd $$i && $(MAKE) clean ; cd .. ; done
	rm -f $(JUNK)

ultrabrite: irixhack.o
	for i in $(DIRS) ; do cd $$i && $(MAKE) clean ; cd .. ; done
	rm -f $(JUNK) $(AUTOJUNK)
