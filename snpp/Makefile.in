SHELL=/bin/sh
CC=@CC@
YACC=@YACC@
LEX=@LEX@
INCLUDES=-I@top_srcdir@/include
CFLAGS=$(INCLUDES) -DVERSION=\"$(VERSION)\" @CFLAGS@
AR=@AR@ cr
RANLIB=@RANLIB@

LIBS=@LIBS@

LDFLAGS=@LDFLAGS@ $(LIBS)

LSNPP_OBJS=snppmain.o snppparse.o snppmisc.o
SOURCES=snppmain.c snppparse.c snppmisc.c

# Lint stuff
LINT=@LINT@
LINTFLAGS=$(INCLUDES) -DVERSION=\"$(VERSION)\" -v -x -u
LINTS=snppmain.ln snppparse.ln snppmisc.ln

EXES=
STUFF=
JUNK=$(EXES) *.o *.a *.core core $(LINTS)

.SUFFIXES: .c .o .l .a .ln

all: snpp.a

snpp.a: $(LSNPP_OBJS)
	$(AR) $@ $(LSNPP_OBJS)
	$(RANLIB) $@

lint: $(LINTS)
	$(LINT) $(LINTFLAGS) -osnpp $(LINTS)

.c.ln: $<
	$(LINT) $(LINTFLAGS) -c $<

depend:
	echo "" >> Makefile
	echo "# Automatically generated dependencies:" >> Makefile
	$(CC) $(CFLAGS) -M $(SOURCES) >> Makefile

# irix globbing shit.
irixhack.o:
	@touch irixhack.o

clean:  irixhack.o
	rm -f $(JUNK)
